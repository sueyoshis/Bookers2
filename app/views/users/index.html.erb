<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
   <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(40, 40) %></td>
        <td><%= user.name %></td>
        <td>
          <!--ユーザ詳細へのリンク-->
          <%= link_to 'Show', user_path(user.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
