<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザ情報-->
      <!--新規投稿の部分-->
      <%= render 'list', book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-1">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(40, 40) %></td>
              <td><%= user.name %></td>
              <td>
                <!--ユーザ詳細へのリンク-->
                <%= link_to 'Show', user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
