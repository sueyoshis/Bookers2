<h2>User info</h2>
<%= form_with model:@user do |f| %>
  <p>Name</p>
  <%= f.text_field :name, autofocus: true, placeholder: "名前を入力してください"  %>
  <p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <p>Introduction</p>
  <%= f.text_area :introduction, placeholder: "自己紹介文を入力してください" %>
  <%= f.submit 'Update User' %>
<% end %>