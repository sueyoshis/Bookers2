<!--ユーザ情報-->
<h2>User info</h2>
<%= image_tag current_user.get_profile_image(63, 63) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>
<!--ユーザ編集画面へのリンク-->
<%= link_to 'ユーザ情報', edit_user_path(current_user.id) %>

<!--新規投稿の部分-->
<h2>New book</h2>
<%= form_with model:@book_new do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<!--ユーザ情報-->
<!--新規投稿の部分-->


<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <!--ユーザ詳細への-->
        <%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(40,40) %><br>
          <%= @user.name %>
        <% end %>
      </td>
      <td>
        <!--本詳細へのリンク-->
        <%= link_to book_path(@book) do %>
          <%= @book.title %>
        <% end %>
      </td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
        <!--編集へのリンク/ログインユーザのみ-->
        <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
        <!--削除へのリンク/ログインユーザのみ-->
        <td><%= link_to 'Destroy', book_path(@book.id), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>