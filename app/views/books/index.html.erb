<!--ユーザ情報-->
<h2>User info</h2>
<%= image_tag current_user.get_profile_image(63, 63) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>

<!--新規投稿の部分-->
<h2>New book</h2>
<%= form_with model:@book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<!--本の一覧の部分-->
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <!--ユーザ詳細へのリンク-->
          <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image(40,40) %>
          <% end %>
        </td>
        <td>
          <!--本詳細へのリンク-->
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
