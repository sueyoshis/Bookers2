<!--ユーザ情報-->
<!--新規投稿の部分-->
<%= render 'users/list', book_new: @book_new %>

<!--本の一覧の部分-->
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <!--ユーザ詳細へのリンク-->
          <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image(40,40) %>
          <% end %>
        </td>
        <td>
          <!--本詳細へのリンク-->
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
